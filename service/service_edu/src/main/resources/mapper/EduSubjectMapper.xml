<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.serviceedu.mapper.EduSubjectMapper">
    <resultMap id="BaseResultMap" type="com.atguigu.serviceedu.entity.EduSubject">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="parent_id" property="parentId" />
        <result column="sort" property="sort" />
        <result column="gmt_create" property="gmtCreate" />
        <result column="gmt_modified" property="gmtModified" />
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,
        title,
        parentId,
        sort,
        gmtCreate,
        gmtModified
    </sql>

    <resultMap id="UnionWithChildren" type="com.atguigu.serviceedu.entity.EduSubject" extends="BaseResultMap">
        <collection property="children" ofType="com.atguigu.serviceedu.entity.EduSubject" column="id"
                    select="com.atguigu.serviceedu.mapper.EduSubjectMapper.getSubjectTest"></collection>
    </resultMap>

    <select id="getSubjects" resultMap="UnionWithChildren">
        select *
        from edu_subject;
    </select>

    <select id="getSubjectTest" resultMap="BaseResultMap" parameterType="java.lang.String">
        select *
        from edu_subject
        where parent_id = #{id}
    </select>

    <select id="list" resultMap="BaseResultMap">
        select *
        from edu_subject;
    </select>

</mapper>
